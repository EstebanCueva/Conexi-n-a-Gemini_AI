@{
    ViewData["Title"] = "Home";
}

<h2>Pregúntale al modelo</h2>

<form asp-action="Index" method="post">
    <textarea name="userPrompt" rows="4" cols="50" placeholder="Escribe tu pregunta aquí..."></textarea><br />
    <button type="submit">Enviar</button>
</form>

@if (ViewBag.chatbotAnswer != null)
{
    <h3>Respuesta:</h3>
    <p>@ViewBag.chatbotAnswer</p>
}
